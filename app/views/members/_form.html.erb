<%= tinymce_assets %>
<%= simple_form_for member, :html => {:multipart => true} do |f| %>
  <%= f.input :name %>
	<%= f.input :description, as: :text, :input_html => { class: 'tinymce text-edit' }%>
  <%= f.input :tags %>
  <%= f.input :discount, as: :text, :input_html => { class: 'tinymce text-edit' }%>
	<%= f.file_field :image %>
	<br />
  <%= f.button :submit %>
<% end %>
<%= tinymce %>
